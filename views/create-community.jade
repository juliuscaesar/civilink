extends layout


block content
  .container-body
    .content-box
      h3 Create Community
      hr
      .row
        .col-xs-10.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3.col-xs-offset-1
          form(id='createCommunity' class='form-horizontal', action='/create-community', method='POST')
            .form-group
              label(for='name') Name
              input#name.form-control(type='text', class='form-control', name='name', value='', required)
            .form-group
              label(for='desc') Description
              textarea#desc.form-control(type='text',  class='form-control', name='desc',  placeholder='', required)
            .form-group
              button.btn.btn-primary(type='submit') Save

      #message
        if message
          h1.text-center.error-message #{message}