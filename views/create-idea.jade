extends layout

block content
  .container-body
    .row
      .col-sm-2.hidden-xs
        include sidebar
      .col-sm-10
        .row
          .col-sm-4.col-md-4
            .content-box
              .headertext #{data.name}
              hr
              center
                if user
                  if ( user.communities.indexOf(data.id) != -1)
                    form.form-horizontal(class='form-leavecommunity', action='/community/#{data.id}/leave', method='POST')
                      .form-group
                        button.btn.btn-danger.btn-full(type='submit') Leave community
                  else     
                    form.form-horizontal(class='form-joincommunity', action='/community/#{data.id}/join', method='POST')
                      .form-group
                        button.btn.btn-success.btn-full(type='submit') Join community
            .content-box
              center
                a(href='/community/#{data.id}')  &#171; Back to #{data.name}
                
          .col-sm-8.col-md-8
            .content-box
              h3 Create Project
              hr

              .row
                .col-xs-10.col-sm-10.col-md-10.col-md-offset-1.col-sm-offset-1.col-xs-offset-1
                  form(class='form-createidea', action='/idea/create-idea', method='POST')
                    .form-group
                      label(for='title') Title
                      input#title.form-control(type='text', name='title', value='', required)
                      input#community.form-control(type='hidden', name='community', value='#{data.id}')
                    .form-group
                      label(for='desc') Short description
                      textarea#desc.form-control(type='text', name='desc',  placeholder='', required)
                    .form-group
                      button.btn.btn-primary(type='submit') Save

              #message
                if message
                  h1.text-center.error-message #{message}