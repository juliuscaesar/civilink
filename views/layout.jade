doctype html
html(ng-app='CiviLink')
  head
    title=title+'CiviLink'
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='icon', href='/public/favicon.ico')
    link(rel='stylesheet', href='/stylesheets/jumbotron.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet', type='text/css')
    
    script(type='text/javascript', src='/javascripts/jquery.js')
    script(type='text/javascript', src='/javascripts/jquery.validate.js')
    script(type='text/javascript', src='/javascripts/bootstrap.min.js')
    script(type='text/javascript', src='/javascripts/Chart.min.js')
    script(type='text/javascript', src='/javascripts/angular.js')


  body(ng-controller='CLController')
    .top-header
      nav.navbar.navbar-default.navbar-fixed-top.navbar-white
        .container-shrink
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            

            navbar-brand
              a(href='/' class='navbar-brand') CiviLink
                
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              if user
                li.dropdown
                  a.navlink.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | #{user.firstName} #{user.lastName}&nbsp;&nbsp;&nbsp;
                    if user.avatar
                      img(src='/images/uploads/#{user.avatar}' class='img-circle' height='25px' width='25px')
                    else
                      img(src="/images/anon.gif" class='img-circle' height='25px' width='25px')
                    | &nbsp;&nbsp;
                    span.caret
                  ul.dropdown-menu
                    li
                      a.navlink(href='/profile/#{user.username}') View Profile
                    li
                      a(href='/edit-profile') Edit Profile
                    li.divider(role='seperator')
                    li
                      a.navlink(href='/logout') Logout
                  li.divider.visible-xs-block(role='separator')
                  li.visible-xs-block
                    a(href='/dashboard') Activity Feed
                  li.visible-xs-block
                    a(href='/communities') Communities
                  li.visible-xs-block
                    a(href='/tasks') My Tasks
              else
                li
                  a(href='/sign-up') Create an account

    block content

