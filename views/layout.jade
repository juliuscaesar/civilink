doctype html
html
  #holder
    head
      title=title+'CiviLink'
      script(type='text/javascript', src='/javascripts/jquery.js')
      script(type='text/javascript', src='/javascripts/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/Chart.min.js')
      link(rel='stylesheet', href='/stylesheets/jumbotron.css')
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/landing-page.css')
      link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')
    #body
      .container
        nav.navbar.navbar-default.bar-white
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            

            navbar-brand
              a(href='/')
                img(src='/images/banner.png' height='100%')
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a(href='/dashboard') Dashboard
                li
                  a(href='/community') Communities
                li
                  a(href='/tasks') My Tasks
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | #{user.firstName} #{user.lastName} 
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href='/profile/#{user.username}') View Profile
                    li
                      a(href='/edit-profile') Edit Profile
                    li.divider(role='separator')
                    li
                      a(href='/logout') Logout
              else
                li
                  a(href='/sign-up') Register



        block content

